<section class="gorgon-class">
  <div class="gorgon-class-header flexrow">
    <span class="item-img">
      {{#if (settings "gfv1" "showItemImages")}}
        <img src="{{item.img}}" title="{{item.name}}" />
      {{/if}}
    </span>
    <span class="item-name">
      <input
        type="text"
        class="item-input"
        value="{{item.name}}"
        name="item.name"
        {{disabled (not editable)}}
        {{disabled locked}}
      />
    </span>
  </div>
  <div class="gorgon-description">
    {{{system.description}}}
  </div>
  <div class="gorgon-apperance">
    <label>{{localize "GFv1.actor.gorgon.apperance"}}:</label>
    {{system.apperance}}
  </div>
</section>
