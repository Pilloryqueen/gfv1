<section>
  <ol class="items-list">
    <li class="flexrow items-header">
      <div class="item-img">
      </div>
      <div class="item-name">
        <span>
          {{localize "GFv1.item.asset.type"}}
        </span>
        {{#if playbook.maxAssets}}
          <span
            class="item-count"
          >({{playbook.assets.length}}/{{playbook.maxAssets}})</span>
        {{/if}}
      </div>
      <div class="item-props flexrow">
        <div> {{localize "GFv1.item.asset.damaged"}} </div>
        <div> {{localize "GFv1.item.asset.void"}} </div>
      </div>
      <div class="item-controls">
        <a
          class="item-control item-create"
          data-action="createDoc"
          data-type="asset"
          data-name="new asset"
          data-system.playbook-type="{{playbook.playbookType}}"
          data-tooltip="{{localize 'DOCUMENT.New' type="asset"}}"
        >
          <i class="fas fa-plus"></i>
        </a>
      </div>
    </li>
    {{#each playbook.assets as |item id|}}
      <li class="item flexrow" data-item-uuid="{{item.uuid}}">
        <div class="item-img">
          {{#if (settings "gfv1" "showItemImages")}}
            <img src="{{item.img}}" title="{{item.name}}" />
          {{/if}}
        </div>
        <div class="item-name">
          <input
            type="text"
            class="item-input"
            value="{{item.name}}"
            name="item.name"
          />
        </div>
        <div class="item-props flexrow">
          <input
            type="checkbox"
            class="item-input"
            name="item.system.damaged"
            {{checked system.damaged}}
          />
          <input
            type="checkbox"
            class="item-input"
            name="item.system.void"
            {{checked system.void}}
          />
        </div>
        <div class="item-controls">
          <a
            class="item-control item-edit"
            data-tooltip="{{localize 'GFv1.item.asset.edit'}}"
            data-action="viewDoc"
          >
            <i class="fas fa-edit"></i>
          </a>
          <a
            class="item-control item-delete"
            data-tooltip="{{localize 'GFv1.item.asset.delete'}}"
            data-action="deleteDoc"
          >
            <i class="fas fa-trash"></i>
          </a>
        </div>
      </li>
    {{/each}}
  </ol>
</section>
