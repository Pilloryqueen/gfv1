<section>
  <ol class="items-list">
    <li class="flexrow items-header">
      <div class="item-img">
      </div>
      <div class="item-name">
        <span>{{localize "GFv1.item.identity.type"}}</span>
        <span class="item-count">({{identities.length}}/{{config
            "maxIdentities"
          }})</span>
      </div>
      <div class="item-props">{{localize "GFv1.item.identity.marked"}}</div>
      <div class="item-controls">
        <a
          class="item-control item-create"
          data-action="createDoc"
          data-type="identity"
          data-name="new identity"
          data-tooltip="{{localize 'DOCUMENT.New' type="identity"}}"
        >
          <i class="fas fa-plus"></i>
        </a>
      </div>
    </li>
    {{#each identities as |item id|}}
      <li class="item flexrow" data-item-id="{{item.id}}">
        <div class="item-img">
          {{#if (settings "gfv1" "showItemImages")}}
            <img src="{{item.img}}" title="{{item.name}}" />
          {{/if}}
        </div>
        <div class="item-name">
          <input
            type="text"
            class="item-input"
            value="{{item.name}}"
            name="item.name"
          />
        </div>
        <div class="item-props">
          <input
            type="checkbox"
            class="item-input"
            name="item.system.marked"
            {{checked system.marked}}
          />
        </div>
        <div class="item-controls">
          <a
            class="item-control item-edit"
            data-tooltip="{{localize 'GFv1.item.identity.edit'}}"
            data-action="viewDoc"
          >
            <i class="fas fa-edit"></i>
          </a>
          <a
            class="item-control item-delete"
            data-tooltip="{{localize 'GFv1.item.identity.delete'}}"
            data-action="deleteDoc"
          >
            <i class="fas fa-trash"></i>
          </a>
        </div>
      </li>
    {{/each}}
  </ol>
</section>
