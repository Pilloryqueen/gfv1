<section>
  <ol class="items-list">
    <li class="flexrow items-header">
      <div class="item-img">
      </div>
      <div class="item-name">
        {{localize "GFv1.item.bond.type"}}
      </div>
      <div class="item-props">{{localize "GFv1.item.bond.level"}}</div>
      <div class="item-controls">
        <a
          class="item-control item-create"
          data-action="createDoc"
          data-type="bond"
          data-name="new bond"
          data-tooltip="{{localize 'DOCUMENT.New' type="bond"}}"
        >
          <i class="fas fa-plus"></i>
        </a>
      </div>
    </li>
    {{#each bonds as |item id|}}
      <li class="item flex flexrow" data-item-id="{{item._id}}">
        <div class="item-img">
          {{#if (settings "gfv1" "showItemImages")}}
            <img src="{{item.img}}" title="{{item.name}}" />
          {{/if}}
        </div>
        <div class="item-name">
          <input
            type="text"
            class="item-input"
            value="{{item.name}}"
            name="item.name"
          />
        </div>
        <div class="item-props">
          <select name="item.system.level" class="item-input">
            {{selectOptions
              (config "bondLevels")
              selected=system.level
              localize=true
            }}
          </select>
        </div>
        <div class="item-controls">
          <a
            class="item-control item-edit"
            data-tooltip="{{localize 'GFv1.item.bond.edit'}}"
            data-action="viewDoc"
          >
            <i class="fas fa-edit"></i>
          </a>
          <a
            class="item-control item-delete"
            data-tooltip="{{localize 'GFv1.item.bond.delete'}}"
            data-action="deleteDoc"
          >
            <i class="fas fa-trash"></i>
          </a>
        </div>
      </li>
    {{/each}}
  </ol>
</section>
