{
  "id": "gfv1",
  "version": "0.4.0",
  "title": "GIRL FRAME",
  "description": "Unofficial system for playing GIRL FRAME. System by Isabelle M. Ruebsaat",
  "authors": [
    {
      "name": "Nova",
      "discord": "ladynova"
    }
  ],
  "esmodules": ["index.mjs"],
  "styles": ["index.css"],
  "packs": [
    {
      "name": "frame",
      "label": "Frames",
      "system": "gfv1",
      "path": "packs/frame",
      "type": "Item",
      "ownership": {
        "ASSISTANT": "OWNER",
        "PLAYER": "OBSERVER"
      },
      "flags": {
        "gfv1": {
          "playbookType": "framePlaybook"
        }
      }
    },
    {
      "name": "girl",
      "label": "Girls",
      "system": "gfv1",
      "path": "packs/girl",
      "type": "Item",
      "ownership": {
        "ASSISTANT": "OWNER",
        "PLAYER": "OBSERVER"
      },
      "flags": {
        "gfv1": {
          "playbookType": "pilotPlaybook"
        }
      }
    },
    {
      "name": "handler",
      "label": "Handlers",
      "system": "gfv1",
      "path": "packs/handler",
      "type": "Item",
      "ownership": {
        "ASSISTANT": "OWNER",
        "PLAYER": "LIMITED"
      },
      "flags": {
        "gfv1": {
          "playbookType": "handlerPlaybook"
        }
      }
    },
    {
      "name": "npcs",
      "label": "NPCs",
      "system": "gfv1",
      "path": "packs/npcs",
      "type": "Actor",
      "ownership": {
        "ASSISTANT": "OWNER",
        "PLAYER": "OBSERVER"
      }
    },
    {
      "name": "adversaries",
      "label": "Adversaries",
      "system": "gfv1",
      "path": "packs/adversaries",
      "type": "Item",
      "ownership": {
        "ASSISTANT": "OWNER",
        "PLAYER": "LIMITED"
      },
      "flags": {
        "gfv1": {
          "playbookType": "gorgonType"
        }
      }
    }
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json",
      "flags": {}
    }
  ],
  "socket": true,
  "documentTypes": {
    "Actor": {
      "pilot": {
        "htmlFields": [
          "description",
          "framePlaybookDescription",
          "pilotPlaybookDescription"
        ]
      },
      "handler": {
        "htmlFields": ["description", "handlerPlaybookDescription"]
      },
      "gorgon": {
        "htmlFields": ["description", "gorgonTypeDescription"]
      },
      "npc": {
        "htmlFields": ["description"]
      }
    },
    "Item": {
      "rule": { "htmlFields": ["description"] },
      "asset": { "htmlFields": ["description"] },
      "playbook": { "htmlFields": ["description"] },
      "tag": { "htmlFields": ["description"] },
      "bond": { "htmlFields": ["description"] },
      "identity": { "htmlFields": ["description"] },
      "gorgonClass": { "htmlFields": ["description"] }
    }
  },
  "compatibility": {
    "minimum": "12",
    "verified": "12"
  },
  "manifest": "https://raw.githubusercontent.com/Pilloryqueen/gfv1/refs/heads/master/system.json",
  "download": "https://github.com/Pilloryqueen/gfv1/archive/refs/tags/0.4.0.zip"
}
